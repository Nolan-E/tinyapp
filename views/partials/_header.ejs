<header>

  <nav class="navbar navbar-expand-md navbar-dark bg-success">
  <!-- <nav class="navbar navbar-light navbar-dark bg-success justify-content-between"> -->

    <a class="navbar-brand" href="/urls">TinyApp</a>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLS</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (currentUser) { %>
      <div style="padding-right: 1em;">Hello, <%= currentUser.email %></div>
      <form class="form-inline" action="/logout" method="POST">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Logout</button>
      </form>
    <% } else { %>
      <form class="form-inline" action="/register" method="GET" style="margin-right: 0.5em;">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Register</button>
      </form>
      <form class="form-inline" action="/login" method="GET">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Login</button>
      </form>
    <% } %>
  </nav>

</header>